@model DEV1_2024_Assignment.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<main class="container my-4">
    <!-- Carousel Section with Smaller Images -->
    <section class="mb-4">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var product in Model.RandomProducts)
                {
                    <div class="carousel-item @(Model.RandomProducts.IndexOf(product) == 0 ? "active" : "")">
                        <!-- Adjusted image size with "img-fluid" and "h-50" classes -->
                        <img src="@product.Image" class="d-block img-fluid h-50 w-auto mx-auto" alt="@product.Name" style="max-height: 300px; object-fit: contain;" />

                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="text-center mb-4">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card p-3">
                    <h5>Total Products</h5>
                    <p class="fs-3">@Model.TotalProducts</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card p-3">
                    <h5>Total Purchases</h5>
                    <p class="fs-3">@Model.TotalPurchases</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card p-3">
                    <h5>Total Customers</h5>
                    <p class="fs-3">@Model.TotalCustomers</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card p-3">
                    <h5>Total Brands</h5>
                    <p class="fs-3">@Model.TotalBrands</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Button to Product Catalog -->
    <section class="text-center mb-4">
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary">View Product Catalog</a>
    </section>

    <!-- Feedback Section -->
    <section class="feedback-section mb-4">
        <h4 class="text-center mb-3">Customer Reviews</h4>
        <div class="row">
            <!-- Example Feedbacks -->
            <div class="col-md-4">
                <div class="card p-3 mb-3">
                    <p>"Great quality and fast delivery!"</p>
                    <p class="text-muted text-end">- Jane Doe</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-3">
                    <p>"The product exceeded my expectations. Highly recommended!"</p>
                    <p class="text-muted text-end">- John Smith</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-3">
                    <p>"Customer service was very helpful."</p>
                    <p class="text-muted text-end">- Alice Brown</p>
                </div>
            </div>
        </div>
    </section>
</main>
