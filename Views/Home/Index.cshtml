@model DEV1_2024_Assignment.ViewModels.HomepageViewModel

@{
  ViewData["Title"] = "Home Page";
}

 <!-- Brands Section -->
    <section class="container py-5" id="brands">
        <h2 class="text-center mb-5">Our Collaborators</h2>
        @if (Model?.Brands != null && Model.Brands.Count != 0)
        {
            <div id="brandCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var brand in Model.Brands)
                    {
                        <div class="carousel-item @(Model.Brands.First().Equals(brand) ? "active" : "")">
                            <div class="text-center">
                                <img src="@brand.Value" alt="logo" class="img-fluid" style="height:100px">
                                <p class="text-muted">- @brand.Key</p>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#brandCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#brandCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
    </section>

<div class="text-center p-2">
  <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Products" asp-action="Index">
    Discover the collection now</a>
</div>

<!-- Add more items as needed -->
<section id="statistics" class="py-2 text-center">
  <h2 class="mb-3">Key Statistics</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card shadow-sm p-4">
        <i class="bi bi-box-seam fs-1 text-primary"></i>
        <h5 class="card-title mt-3">Total Products</h5>
        <p class="fs-4 fw-bold">@Model.TotalProducts</p>
      </div>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card shadow-sm p-4">
        <i class="bi bi-people-fill fs-1 text-success"></i>
        <h5 class="card-title mt-3">Total Customers</h5>
        <p class="fs-4 fw-bold">@Model.TotalCustomers</p>
      </div>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card shadow-sm p-4">
        <i class="bi bi-cart-check-fill fs-1 text-danger"></i>
        <h5 class="card-title mt-3">Total Purchases</h5>
        <p class="fs-4 fw-bold">@Model.TotalPurchases</p>
      </div>
    </div>
  </div>
</section>
