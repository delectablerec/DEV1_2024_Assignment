@model DEV1_2024_Assignment.ViewModels.DetailsViewModel

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dettaglio Prodotto - MVCauthApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Nerko+One&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sevillana&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <h2 class="mb-4">@Model.Product.Name</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row d-flex m-2">
                        <div class="hero col-md-6 col-sm-12 mt-3 mt-md-0">
                            <div class="hero-content text-center">
                                <a href="#funzionalita" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-down-circle me-2" aria-hidden="true"></i>Scopri di più
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 mt-3 mt-md-0">
                            <h5 class="card-title">@Model.Product.Name</h5>

                            <label for="qty" class="form-label">Quantità</label>
                            <input type="number" class="form-control w-25" id="qty" value="1" min="1" max="100" step="1" required>
                            <br>
                            <div class="btn-group">
                                <a href="#" class="btn btn-outline-secondary me-2">Aggiungi al carrello</a>
                                <a href="#" class="btn btn-outline-secondary">Compra subito</a>
                            </div>
                            <br><br>
                            <i class="bi bi-heart"></i>
                            <a href="#" class="text-decoration-none text-primary" style="transition: color 0.3s;">Aggiungi alla lista desideri</a>
                        </div>
                    </div>
                </div>
            </div>
            <a href="productCatalog.html" class="btn btn-outline-secondary mt-3">
                <i class="bi bi-arrow-left-circle"></i> Torna ai prodotti
            </a>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
