@model DEV1_2024_Assignment.ViewModels.ManageBrandViewModel

@{
  ViewData["Title"] = "Manage Product";
}


<a asp-controller="Products" asp-action="AddProduct" class="btn btn-secondary btn-lg w-100 my-5" role="button">Add a new product</a>

<h2 class="mb-5">Manage your products </h2>

<div class="col-12 d-flex justify-content-md-end my-5">
  <form method="get" action="@Url.Action("ManageBrand", "Products")" class="w-100">
    <div class="input-group">
      <input type="text" class="form-control" name="name" placeholder="Search product by name"
        value="@Model.ProductName">
      <button type="submit" class="btn btn-outline-secondary">Search</button>
    </div>
  </form>
</div>

@if (Model.Products.Count != 0)
{
  <div class="row">
  @foreach (var product in Model.Products)
    {
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">@product.Name</h5>
            <img src="@product.Image" alt="@product.Image" class="img-fluid">
            <p class="card-text"><strong>Price:</strong> â‚¬ @product.Price.ToString()</p>
            <p class="card-text"><strong>Stock: </strong>
              @product.Stock.ToString()
            </p>
          </div>
          <div class="card-footer">
            <form asp-controller="Products" asp-action="EditProduct" method="get">
              <input type="hidden" name="id" value="@product.Id" />
              <button type="submit" class="btn btn-success btn-sm">Edit</button>
            </form>
            <form asp-controller="Products" asp-action="DeleteProduct" method="post">
              <input type="hidden" name="id" value="@product.Id" />
              <button type="submit" class="btn btn-success btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
    }
  </div>
}
else
{
  <div>No Products Found</div>
}
</div>

<style>
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }
    </style>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>