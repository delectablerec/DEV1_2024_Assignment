@model DEV1_2024_Assignment.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container hero-content my-5">
    <h1 class="display-4 text-center">Your shopping cart</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <!-- Shopping Cart Table -->
        <div class="col-12 col-lg-8 mb-4">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th style="width: 20%"></th>
                            <th style="width: 40%">Details</th>
                            <th class="d-none d-md-table-cell text-end" style="width: 20%">Price</th>
                            <th class="text-end" style="width: 20%">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Cart)
                        {
                            <tr>
                                <td>
                                    <img src="img/gioiello2.jpeg" alt="Gioiello 2" class="img-fluid"
                                        style="max-width: 150px; height: auto;">
                                </td>
                                <td>
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <p class="my-3">@product.Name</p>
                                        <div class="row gx-2">
                                            <div class="col-9">
                                                <!-- Form for updating cart quantity -->
                                                <form method="post" action="@Url.Action("UpdateCartQuantity", "Products")"
                                                    class="d-flex">
                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                    <div class="col-6">
                                                        <input type="number" name="quantity" class="form-control" max="20"
                                                            min="1" value="@product.Stock" aria-label="Quantity">
                                                    </div>
                                                    <div class="col-6 d-flex justify-content-end">
                                                        <button type="submit" class="btn btn-secondary me-2">
                                                            <i class="bi bi-arrow-clockwise"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="col-3">
                                                <form method="post" action="@Url.Action("RemoveFromCart", "Products")">
                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                    <button type="submit" class="btn btn-danger"> <i
                                                            class="bi bi-trash3"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                        <p class="my-3">Disponibilità: immediata</p>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell text-end">€ @product.Price</td>
                                <td class="text-end">€ @(product.Price * 1) <!-- Replace 1 with product.Quantity if needed --></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Payment Summary Card -->
        <div class="col-12 col-lg-4">
            <div class="card border-secondary">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Subtotale</td>
                                    <td class="text-end">€ 36,32</td>
                                </tr>
                                <tr>
                                    <td>Spese di spedizione stimate</td>
                                    <td class="text-end">Gratuite</td>
                                </tr>
                                <tr>
                                    <td>Totale</td>
                                    <td class="text-end">€ 36,32</td>
                                </tr>
                            </tbody>
                        </table>
                    </li>
                </ul>
                <div class="card-footer text-center">
                    <a href="@Url.Action("CompletedPurchase", "Products")"
                        class="btn btn-outline-secondary">Acquista</a>
                </div>
            </div>
        </div>
    </div>
</div>
